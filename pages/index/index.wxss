/**index.wxss**/

/**页头导航栏**/
.nav-list{
  background: #66f;
  color: #fff;
  display: flex;
  position: fixed;
  width: 750rpx;
  top: 0;
  z-index: 8;
}
.nav-item{
  display: flex;
  flex-direction: column;
  flex-grow:1;
  width: 100rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
}
/* 因为无法通过本地图片设置背景 单独用个视图实现小白块 */
.nav-on{
}
.white-block{
  display: block;
  width: 30rpx;
  height: 4rpx;
  background: rgba(255,255,255,0.6);
  position: fixed;
  top: 65rpx;
  margin: 0 38rpx;
  z-index: 9;
}
/**新闻列表**/
.news-list{
  margin-top: 80rpx;
  
}
.news-item{
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  height: 200rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  margin: 0 30rpx;
}
.pic{
  width: 200rpx;
  height: 160rpx;
  border-radius: 10rpx;
}
.text{
  width: 460rpx;
  margin-right: 50rpx;
}
.title{
  font-size: 35rpx;
  line-height: 40rpx;
  height: 80rpx; 
  color: #333;
  word-break: break-all;
}
.more{
  font-size: 25rpx;
  line-height: 35rpx;
  color: #999;
  display: flex;
  margin-top: 10rpx;
}
.source{
  padding-right: 20rpx;
}
.time{
  
}

.news-first{
  display: block;
  position: relative;
  height: auto;
  border-top: 0;
  padding: 30rpx;
  margin: 0;
}
.news-first .pic{
  display: block;
  width: 690rpx;
  height: 360rpx;
}
.news-first .text{
  display: block;
  width: 650rpx;
  position: absolute;
  left: 30rpx;
  bottom: 30rpx;
  background: rgba(0, 0, 0, 0.6);
  padding: 20rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.news-first .text .title{
  color: rgba(255, 255, 255, 0.9);
}
.news-first .text .more{
  color: rgba(255, 255, 255, 0.6);
}